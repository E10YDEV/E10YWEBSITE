---
import { getCollection } from "astro:content";
import Base from "@layouts/Base.astro";
import Posts from "@layouts/Posts.astro";
import Proyects from "@layouts/Proyects.astro";
import HeartIcon from "@components/icons/HeartIcon.astro";
import Separator from "@components/Separator.astro";
const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<Base>
  <div>
  <p class="ml-8 pr-1 !text-white md:w-40 md:text-3xl w-28 text-xl text-center font-heading relative top-5 md:top-6 bg-zinc-900 z-20">&#62;ELOY</p>
<div class="bg-zinc-900 flex pt-2 pb-2 sm:p-4 flex-col w-full pixel-corners2 dark:dark-pixel-corners2">
  <div class="pt-4 md:pt-0 flex flex-row px-1 w-full text-center  items-center sm:text-left">
    <div class="flex flex-col  sm:mb-0 pr-2">
      <p class="font-sans text-justify lg:text-xl sm:text-sm md:text-base text-xs mr-3 ml-3">
       Hola soy Eloy, un apasionado del aprendizaje constante y actualmente estudio programación en 42 para fortalecer mis habilidades. Tengo experiencia en desarrollo web y contribuyo al código abierto. Aunque trabajo en I+D farmacéutico, la programación me apasiona. Uso este blog para compartir conocimientos y seguir creciendo. ¡Bienvenido!
    </div>
    <div class="flex flex-col items-center">
      <div class="pixel-corners dark:dark-pixel-corners m-1 relative overflow-visible flex-shrink-0 aspect-1/1 self-center">
        <div class="animated-image lg:w-40 lg:h-40 sm:w-40 sm:h-40 md:w-40 md:h-40 h-20 w-20"></div>
      </div>
      <div class="relative">
        <HeartIcon/>
        <div class="bar self-center m-1 lg:w-40 sm:w-40 lg:h-5 md:w-40 md:h-5 h-5 w-20 pixel-corners dark:dark-pixel-corners relative text-center text-xl">
        </div>
      </div>
      </div>
    </div>
  </div>
</div>
</div>

  <Separator word="Posts"/>
  <Posts posts={posts} />
  <Separator word="Proyectos"/>
  <Proyects/>
</Base>
