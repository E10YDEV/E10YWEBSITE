---
import { getCollection } from "astro:content";
import HomePagination from "@components/HomePagination.astro";
import Base from "@layouts/Base.astro";
import Posts from "@layouts/Posts.astro";
import Hero2 from "@components/Hero2.astro";
import Separator from "@components/Separator.astro";
const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<Base>
  <Hero2 slot="hero2"/>
  <Separator word="Posts"/>
  <Posts posts={posts} />
  <Separator word="Sobre mí"/>

  <div class=" flex p-4 flex-col w-full pixel-corners dark:dark-pixel-corners ">
    <div class="flex flex-col sm:flex-row  px-1 w-full text-center sm:text-left">
      <div class="flex flex-col mb-10 sm:mb-0 pr-2">
        <h2 class="text-lg mb-1 font-light">Hola soy Eloy !!</h4>
        <p class="text-sm text-justify mr-1">Me dedico a la investigación farmacéutica, pero recientemente me sumergí en la programación. Este blog surge de mi interés por la informática. Mi objetivo es respaldar mi aprendizaje y colaborar en proyectos de código abierto.</p>
      </div>
      <div class=" transition-transform pixel-corners dark:dark-pixel-corners m-1 relative overflow-visible flex-shrink-0 h-[8rem] w-[10rem] aspect-1/1 self-center">
        <image class="absolute left-3 -top-[2.4rem] w-40 h-40"src="/descarga (1).png"/>
      </div>
      
    </div>
    </div>
  </div>



  
</Base>
