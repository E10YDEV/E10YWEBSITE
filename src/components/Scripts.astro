

  <script is:inline>
var planetImage = document.getElementById("heroInside");
var planetLeft = document.querySelector('.planetLeft');
var planetRight = document.querySelector('.planetRight');
var arrayPlanets = ["mars.png", "namek.png","earth.png"];
var index = 0;

function performOperations(direction) {
  index = (index + direction + arrayPlanets.length) % arrayPlanets.length;

  if (planetImage.classList.contains("animate")) {
    planetImage.classList.remove("animate");
  }
  setTimeout(() => {
    planetImage.classList.add("animate");
  }, 10);
  setTimeout(() => {
    planetImage.style.backgroundImage = 'url(' + arrayPlanets[index] + ')';
  }, 1000);
}
  planetImage.addEventListener('animationend', function () {
  planetImage.classList.remove("animate");
});
  planetLeft.addEventListener('click', function () {
  performOperations(-1);
});
  planetRight.addEventListener('click', function () {
  performOperations(1);
});
</script>

  